{
    "tokenPairRules":
        [   
            {   /* Merge two -'s as = */
                "tokenA" : "-",
                "tokenB" : "-",
                "predicaments" : 
                    [
                        "relativeWidthDifference < 0.5",
                        "relativeLeftXOffset < 0.4",
                        "relativeRightXOffset < 0.4",
                        "numTokensInBetweenY == 0"
                    ],
                "recommendation" : "mergeAs: \"=\""
            },
            {   /* Merge - with tick (reverse-tick, to be precise) to form root */
                "tokenA" : "tick",  /* Pay attention to the ordering! */
                "tokenB" : "-",
                "predicaments" : 
                    [
                        "relativeHeightDifference > 0.3",
                        "relativeTopYOffset < 0.3",
                        "relativeBottomYOffset > 0.4",
                        "relativeRightToLeftOffset < 0.25",  /* Order of the two tokens matters */
                        "relativeRightToLeftOffset > -0.25",
                        "numTokensInBetweenX == 0"
                    ],
                "recommendation" : "mergeAs: \"root\""
            }
            
        ],
    "mergePartners":  
        /* A set of tokens for which a given token can merge with. Any tokens that are outside the set cannot be merged. */
        /* If a token cannot be merged with any token, set the value to [] */
        {
            "root": []
        }
}